# Environment Variables for Production Deployment

# Database Configuration
DATABASE_URL=postgresql://postgres:CHANGE_THIS_PASSWORD@db:5432/fastapi_db
TEST_DATABASE_URL=postgresql://postgres:CHANGE_THIS_PASSWORD@db:5432/fastapi_test_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD
POSTGRES_DB=fastapi_db

# JWT Configuration
# Generate strong secrets using: openssl rand -hex 32
JWT_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_MIN_32_CHARS
JWT_REFRESH_SECRET_KEY=CHANGE_THIS_TO_ANOTHER_SECURE_RANDOM_STRING_MIN_32_CHARS
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Hashing
BCRYPT_ROUNDS=12

# Python Configuration
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# Application Settings
APP_NAME=FastAPI Calculator
APP_VERSION=1.0.0
APP_HOST=0.0.0.0
APP_PORT=8000

# Domain Configuration (for production with Caddy)
DOMAIN=your-domain.com
EMAIL=your-email@example.com

# PgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=CHANGE_THIS_ADMIN_PASSWORD
